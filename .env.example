# AWS Bedrock Configuration
# Using Amazon models only (Nova Pro for inference, Titan for embeddings)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Bedrock Models (Amazon only)
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_INFERENCE_MODEL=amazon.nova-pro-v1:0

# MongoDB Configuration (Food Knowledge ONLY - dishes, not restaurants)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=food_places_db
MONGODB_COLLECTION=dishes

# Optional: Tavily API Key (for restaurant search via Tavily)
# Get from: https://tavily.com
# TAVILY_API_KEY=your_tavily_api_key

# Optional: Exa API Key (alternative to Tavily for restaurant search)
# Get from: https://exa.ai
# EXA_API_KEY=your_exa_api_key
